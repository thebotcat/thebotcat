{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ],
    "no-trailing-spaces": ["error", { "skipBlankLines": true }],
    "no-undef": 0,
    "no-empty": 0,
    "no-func-assign": 0,
    "no-cond-assign": 0,
    "no-unused-vars": 0,
    "no-useless-catch": 0
  }
}
